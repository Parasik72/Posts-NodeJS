<div id="wrapperMain">
    <%- include('./layout/header.ejs', {user, currentUrl}) %>

    <main>
        <div class="content">
            <h1><%=error %></h1>
        </div>
        <% if(!user.login || !user.id) { %>
        <div>  
            <div class="formRegistration">
                <h2>Registration</h2>
                <form>
                    Login<input id="registrationLogin" type="text">
                    Password<input id="registrationPassword" type="password">
                    Confirm password<input id="registrationConfirmPassword" type="password">
                    <div class="twoBtn">
                        <button id="registrationSend">Submit</button>
                        <button id="toLogin">To login</button>
                    </div>
                </form>
            </div>
        </div>
        <div>
            <div class="formLogin">
                <h2>Login</h2>
                <form>
                    Login<input id="loginLogin" type="text">
                    Password<input id="loginPassword" type="password">
                    <div class="twoBtn">
                        <button id="loginSend">Submit</button>
                        <button id="toRegistration">To registration</button>
                    </div>
                </form>
            </div>
        </div>
        <% } else {%>
        <div>
            <div class="controlPanel">
                <h3>Control panel</h3>
                <a href="/posts/add">Create post</a>
                <a id="logout" href="/">Logout</a>
            </div>
        </div>
         <% }%>
    </main>
    
    <%- include('./layout/footer.ejs') %>
</div>

